<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jay.blog.dao.BlogContentDao">

    <resultMap id="blogVOResultMap" type="com.jay.blog.vo.BlogVO">
        <result property="id" column="blog_id"/>
        <association property="type" javaType="com.jay.blog.entity.Type">
            <result property="id" column="type_id"/>
        </association>
        <association property="user" javaType="com.jay.blog.entity.User">
            <result property="id" column="user_id"/>
        </association>
    </resultMap>

    <select id="listBlogContentByQuery" resultMap="blogVOResultMap" >
        select b.id, b.title, b.first_picture,
               b.description, b.create_time, b.update_time,
               b.type_id, b.user_id
        from b_blog_content as bc
            right join b_blog as b
            on bc.blog_id = b.id
        where match(bc.title,bc.content_html) against(#{query})
        order by b.update_time desc;
    </select>
</mapper>